  <!-- ヘッダー -->
  <header>
    🌟 私のWebページへようこそ 🌟
  </header>

  <!-- コンテンツ -->
  <main style="padding: 20px;">
    <h1>セリフの一部を表示（記憶なし）</h1>

    <p>
      〇〇:「<span id="hiddenPart">この部分のみボタンで表示</span>」です
      <button id="showButton" onclick="showPart()">表示</button>
    </p>
  </main>

  <script>
    function showPart() {
      document.getElementById("hiddenPart").style.display = "inline";
      document.getElementById("showButton").style.display = "none";
    }
  </script>
