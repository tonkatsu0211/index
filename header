    /* ヘッダーのスタイル */
    header {
      background-color: #333;
      color: white;
      padding: 15px;
      text-align: center;
      font-size: 20px;
    }

    /* ページ全体の余白を調整 */
    body {
      margin: 0;
      font-family: sans-serif;
    }

    /* 以下は前のボタン表示用スタイル */
    #hiddenPart {
      display: none;
      font-weight: bold;
    }

    #showButton {
      padding: 6px 12px;
      border: 2px solid #333;
      background-color: #f0f0f0;
      color: #000;
      cursor: pointer;
      border-radius: 4px;
      font-size: 14px;
    }

    #showButton:hover {
      background-color: #ddd;
    }
  </style>
